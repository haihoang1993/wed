<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#005081"
    android:orientation="vertical"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="3dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvItemHeaderWeekActivity"

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:text="20/03 - 30/04"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2h"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_weight="3"
            android:layout_gravity="right"
            android:weightSum="5"
            android:textStyle="bold" >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:src="@mipmap/ic_hour"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0.3m"
                android:textColor="#fff"
                android:gravity="left"
                android:layout_weight="3.5"
                android:textSize="15dp"
                android:textStyle="bold"
                android:id="@+id/tvItemSumDurationActivi" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2h"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="3"
            android:weightSum="5"
            android:textStyle="bold" >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:src="@mipmap/ic_mile"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="011.23m"
                android:layout_weight="3.5"
                android:textColor="#fff"
                android:gravity="left"
                android:id="@+id/tvItemSumDistanceActivity"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="3dp"
        android:background="#1175b3"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/lblListItem"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
                android:text="Goal"
            android:gravity="right"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2h"
            android:textColor="#fff"
            android:textSize="15dp"
            android:layout_weight="3"
            android:layout_gravity="right"
            android:weightSum="5"
            android:textStyle="bold" >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:src="@mipmap/ic_hour"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="15 h"
                android:textColor="#fff"
                android:gravity="left"
                android:layout_weight="3"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="2h"
            android:textColor="#fff"
            android:textSize="15dp"
            android:gravity="center"
            android:layout_weight="3"
            android:weightSum="5"
            android:textStyle="bold" >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:src="@mipmap/ic_mile"
                android:scaleType="fitCenter"
                android:layout_gravity="right"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="20 km"
                android:textColor="#fff"
                android:gravity="left"
                android:layout_weight="3"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>