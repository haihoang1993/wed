<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorMenu"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingTop="5dp"
            android:text="Setting Goal"
            android:textColor="@color/white"
            android:textSize="@dimen/size_text_setting"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/bg2"

            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Week"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_setting" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/texview_goal"
                android:drawableRight="@mipmap/ic_calender_s"
                android:gravity="center"
                android:text="Prayers"
                android:id="@+id/tvSelectWeek"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_setting"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#fff"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/bg2"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:text="Week"
                android:textColor="@color/white"
                android:textSize="@dimen/size_text_setting" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/texview_goal"
                    android:drawableRight="@mipmap/ic_hour_s"
                    android:gravity="center"
                    android:text="14"
                    android:inputType="number"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_setting"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:background="@drawable/texview_goal"
                    android:drawableRight="@mipmap/ic_mile"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/size_text_setting"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="16dp"
        android:background="#877d7d"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/bg2" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Heath is like money.\nWe never have a true idea of its\nvalue until we lose it."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="right"
                android:text="Hoang Hai"
                />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/bg2" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Family is like music.\nsome high notes\nsome low notes\nbut always a beautiful song\n"
                />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
